{
  "name": "clebson/api",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Api\\": "src/",
      "Tests\\": "tests/"
    },
    "files": [
      "vendor/pecee/simple-router/helpers.php"
    ]
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000 -t public"
    ],
    "format": "vendor/bin/pint",
    "lint": "vendor/bin/phpstan analyze -l 10 src public",
    "test": "vendor/bin/pest --coverage",
    "ci": [
      "composer format",
      "composer lint",
      "composer test"
    ]
  },
  "authors": [
    {
      "name": "Clebson Moura",
      "email": "clebson.sh@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "pecee/simple-router": "^5.4",
    "vlucas/phpdotenv": "^5.6",
    "respect/validation": "^2.4"
  },
  "require-dev": {
    "laravel/pint": "^1.25",
    "phpstan/phpstan": "^2.1",
    "pestphp/pest": "^4.1",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
